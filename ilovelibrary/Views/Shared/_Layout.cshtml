<!DOCTYPE html>
<html lang="zh">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href=@Url.Content("~/favicon.ico")>
    <title>@ViewBag.Title - 我爱图书馆</title>

    <!-- Bootstrap core CSS -->

    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/sticky-footer-navbar.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/layer.m.css")" type="text/css" rel="stylesheet" />

    <script src='@Url.Content("~/Scripts/jquery-3.3.1.js")'></script>
    <script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.js")'></script>
    <script src="@Url.Content("~/Scripts/bootstrap.js")"></script>
    <script src="@Url.Content("~/Scripts/knockout-3.4.2.js")"></script>
    <script src="@Url.Content("~/Scripts/layer.js")"></script>


    <script>

        // 高亮显示当前的菜单
        $(document).ready(function () {
            // 当前菜单高亮显示
            $('ul.nav.navbar-nav').find('a[href="' + location.pathname + '"]')
                .closest('li').addClass('active');

            //alert("abc");
        });
    </script>

    @RenderSection("style", required: false)
    @RenderSection("scripts", required: false)
</head>

<body style="background-image:url(' @ilovelibrary.Server.ilovelibraryServer.Instance.TodayUrl ');-moz-background-size:cover;-webkit-background-size:cover;-o-background-size:cover;background-size:cover;">



    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/home/index">我爱图书馆</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-left">
                    <li>
                        <a class="active" href="~/Charging/Main">借还窗</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @Html.Partial("_LoginPartial")
                    <li>
                        <a href="~/Home/About">关于</a>
                    </li>
                    <li>
                        <a href="~/Home/Contact">联系我们</a>
                    </li>

                </ul>

            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>


    <!-- Begin page content -->
    <div class="container">

        <!--部分页占位符 -->
        @RenderBody()
    </div>

    <footer class="footer">
        <div class="container">
            <p class="text-muted" style="text-align:center">
                <a href="https://github.com/DigitalPlatform/chord">开源的云图书馆项目 chord</a>
            </p>
        </div>
    </footer>



</body>
</html>
