            var left = (dw - 600) / 2;
            //alert(left+"-"+top);

            var myStyle = "";
            if (dw >= 800) {
                myStyle = "width:600px;height:500px;position:relative; ";
            }
            else {
                myStyle = "border:none;position:fixed; left:0; top:0; width:100%; height:100%;";
            }

            //alert(myStyle);

            //页面层
            var index1 = layer.open({
                type: 1,
                title: '请选择一个读者',
                style: myStyle,
                content: readerHtml,
