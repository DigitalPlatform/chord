                    openSelectReader = false;
                }
            });

            //addClassForLayer();
        }

        // 设一个变量，解决选读者打回车，导致在册条码框收到回车事件了。
        var canDoThing = true;
        // 选择读者图层点击ok时
        function okSelectReaderLayer(obj) {
            canDoThing = false;
            //alert("okSelectReaderLayer-canDoThing = false;")

            if (obj == null)
