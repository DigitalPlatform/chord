@{
    ViewBag.Title = "出纳窗";
}
@section Scripts {
    <script>

        // 读者view model
        var patronVModel = {
            errorInfo: ko.observable(""),

            // 注意必须要后面带("")，可以监控对象
            patron: ko.observable(""),
            overdueList: ko.observableArray(),
            borrowList: ko.observableArray(),
            reservationList: ko.observableArray(),

            // 右侧信息对应的reader barcode
            readerBarcode: ko.observable("")
        };

        //操作 view model
        var cmdModel = {
            commands: ko.observableArray(),
            // 命令编辑
            editor: {
                type: ko.observable("borrow"),
                readerBarcode: ko.observable(""),
                itemBarcode: ko.observable("")
            }
        }

        function readerClick(obj) {
            $(".reader-tr").removeClass("reader-selected-bg");
            //$(".reader-tr").find(".itemLeftTd").css("background-color", "#EEEEEE");

            $(obj).addClass("reader-selected-bg");
            //$(obj).find(".itemLeftTd").css("background-color", "#278DF3");
        }

        function addClassForLayer() {
            alert("add");
            $(".layermcont").addClass(".layermcontAdd");
        }

        // 是否打开了选择读者对话框
        var openSelectReader = false;
        // 选择读者
        function selectReader(readerHtml) {
            //设为true
            openSelectReader = true;

            //让焦点失效
            $("#txtReaderBarcode").blur();
            $("#txtItemBarcode").blur();

