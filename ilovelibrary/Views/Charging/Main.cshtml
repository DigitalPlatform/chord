                        if (item.isManagetLoc == false) {
                            myClass += " item-noManagerLoc";
                            strIconTd = "<td  class='itemFirstCol2'><span style='color:gray'><span class='glyphicon glyphicon-minus-sign'></span></span></td>";
                        }

                        // 检查背景和底部线条
                        var myStyle = "style='";
                        if (item.backColor != "") {
                            //myStyle += " background-color:"+ item.backColor+"; ";
                        }
                        if (item.isAddLine == true) {
                            myStyle += " border-bottom:2px solid #CCCCCC; ";
                        }
                        myStyle += "'";


                        if (availableCount == 0) {
                            if (item.isGray == false && item.isManagetLoc == true)
                                availableCount++;
                        }
                        else {
                            availableCount++;
                        }

                        // 选中第一个可用行
                        if (availableCount == 1)
                            myClass += " item-selected-bg";

                        var barcodeTitle = "册条码号";
                        var strTypeIconTd = "<td  class='itemFirstCol2'><span style='color:gray'><span class='glyphicon glyphicon-book'></span></span></td>";
                        if (item.isBiblio == true) {
                            barcodeTitle = "书目路径";
                            strTypeIconTd = "<td  class='itemFirstCol2'><span style='color:gray'><span class='glyphicon glyphicon-credit-card'></span></span></td>";
