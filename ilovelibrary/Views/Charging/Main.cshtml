        //检索
        function doSearchItem() {

            //alert("doSearchItem");

            $("#itemsBody").html("");

            var strFrom = $("#selFrom").val().trim();
            if (strFrom == "") {
                alert("尚未选中检索途径");
                return;
            }

            var strWord = $("#txtWord").val().trim();
            if (strWord == "") {
                alert("尚未输入检索词");
                return;
            }

            // 拼成检索字符串
            var searchText = strFrom + "::" + strWord;
            //alert(searchText);

            //调检索的api
            var functionType = cmdModel.editor.type();
            var url = "/api/biblioApi?action=search&searchText=" + encodeURIComponent(searchText) + "&functionType=" + functionType;
            // 调api
            sendAjaxRequest(url, "GET", function (data) {

                if (data.apiResult.errorCode == -1) {
                    alert(data.apiResult.errorInfo);
                    return;
                }
                else if (data.apiResult.errorCode == 0) {
                    alert("未命中");
                    return;
                }
                else {
                    //alert("命中'" + data.apiResult.errorCode + "'条");

                    var myhtml = "";
                    //alert(data.itemList.length);
                    var availableCount = 0;
                    for (var i = 0; i < data.itemList.length; i++) {
                        var item = data.itemList[i];
                        var myClass = "";
                        if (item.isGray == true)
                            myClass += " item-gray ";

                        // 非可管理的馆藏
