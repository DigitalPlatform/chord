                }

                //alert("getAllCmd3");
                // 关闭等待层
                layer.close(index);

                //alert("getAllCmd31");
                // 填充summary
                window.setTimeout("fillPending()", 1);

                //alert("getAllCmd4");

            }, function (xhq, textStatus, errorThrown) {

                //alert("getAllCmd5");
                alertServerError(errorThrown);
                // 关闭等待层
                layer.close(index);
            });
        }

