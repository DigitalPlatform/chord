                    $(divId).html(html);

                    // 加上card
                    // $(divId).addClass("card");
                }

            }, function (xhq, textStatus, errorThrown) {
                // 关闭等待层
                //layer.close(index);
                hideLoading();

                alert("访问服务器出错：\r\n" + errorThrown);

            });

        }




