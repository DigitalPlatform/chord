                action = "POST";
            }
            else {
                action = "PUT";
                url += "/" + id;  //url也加一截
            }

            //alert(url);
            sendAjaxRequest(url, action,
                function (result) {
                    // 关闭等待层
                    hideMaskLayer();

                    if (result.errorCode == -1) {
                        alert("操作失败：" + result.errorInfo);
                        return;
                    }

                    alert("操作成功");

