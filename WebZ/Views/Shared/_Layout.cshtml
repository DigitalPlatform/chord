<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebZ</title>

    <link rel="stylesheet" href="~/css/WebZ.css" />
    <link rel="stylesheet" href="~/css/semantic.min.css" type="text/css">
    

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/semantic.min.js"></script>
    <script src="~/js/WebZ.js?a=1"></script>


    <script>

    </script>

    @RenderSection("style", required: false)
</head>
<body>

    <div class="ui secondary  menu">
        <a class="active item" href="~/home/index?type=edit">Z39.5服务器信息管理 </a>
        <a class="item" href="~/home/Tool">实用工具</a>
        <a class="item" href="~/home/demo">UI demo</a>
    </div>

    <div class="body-content">
        <div id="loading"></div>
        <div id="mask-background" style="display: none; "></div>
        <div id="mask-progressBar" style="display: none; ">数据处理中，请稍候...</div>
        @RenderBody()
    </div>

    <script>
        $(document).ready(function () {
            $('.ui.accordion').accordion({ duration: 'click' });
            $('.ui.checkbox').checkbox();   //使得单选框可以被选中
            //$('.ui.secondary.menu').menu();

            $('.ui.secondary.menu')
                .on('click', '.item', function () {
                    $(this)
                        .addClass('active')
                        .siblings('.item')
                        .removeClass('active');
                });
        });

    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
