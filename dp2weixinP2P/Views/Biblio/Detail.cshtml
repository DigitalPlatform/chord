                            var myhtml = getDetail(libId, recPath, o, "detail", "");
                            expand("d1", 0);
                        }
                    }




                    

                    // 重新加载页面
                    //window.location.reload();

                    //alert("a1");
                    // 保存后，要展开
                    //expand('d1', false);

                    //alert("a2");

                },
                function (xhq, textStatus, errorThrown) {
                    // 关闭等待层
                    hideMaskLayer();
                    alert(errorThrown);
                },
                {
                    //id: id,
                    barcode: barcode,
                    location: location,
                    bookType: bookType,
                    accessNo: accessNo,
                    price: price,
                    batchNo: batchNo
                }
            );

