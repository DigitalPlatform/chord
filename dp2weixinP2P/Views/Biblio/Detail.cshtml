                return;
            }
            //alert("bookType=[" + bookType + "]");

            var accessNo = $("#accessNo").val();
            if (accessNo == "") {
                //alert("您尚未输入索取号。");
                //return;
            }

            var price = $("#price").val();
            if (price == "" || price == null) {
                //alert("您尚未输入册价格。");
                //return;
            }


            var batchNo = $("#batchNo").val();
            if (batchNo == "") {
                //alert("您尚未输入批次号。");
                //return;
            }

