@model dp2weixin.service.Patron
@{
    ViewBag.Title = "PatronReview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section header {
    <h1 class="mui-title">读者审核</h1>
}

@section style {
    <style>
        TABLE.patronEdit {
            text-align: left;
            background-color: white;
            width: 100%;
        }

            TABLE.patronEdit TR TD {
                border-width: 0px;
                padding: 2px;
            }

                TABLE.patronEdit TR TD.value {
                    padding-left: 5px;
                }

                TABLE.patronEdit TR TD.label {
                    min-width: 80px;
                    width: 80px;
                    color: #cccccc;
                    padding-left: 5px;
                    padding-right: 5px;
                    text-align: right;
                }
    </style>
}

@section Scripts {
    <script>

        // 保存读者信息
        function save(action) {

            var pass = true;
            if (action == "n")
                pass = false;

            var state = "";  // 通过的时候，把状态置为空就可以了。

            var reason = $("#txtReason").val();
            if (pass == false) {
                // 证条码号
                if (reason == "") {
                    alert("请输入审核不通过原因！");
                    return;
                }

                state = "不通过";
            }


            var libId = getLibId(); 
            if (libId == "") {
                alert("异常情况：libId为空。");
                return;
            }
            var userName = $("#_userName").text();
            if (userName == "") {
                alert("异常情况：userName为空。");
                return;
            }

            // 记录路径 _recPath
            var recPath = "";
            recPath = $("#_recPath").text();
            if (recPath == "") {
                alert("异常情况：读者记录路径为空");
                return;
            }

            // 时间戳
            var timestamp = "";
            timestamp = $("#_timestamp").text();
            if (timestamp == "") {
                alert("异常情况：timestamp为空");
                return;
            }

            // 证条码号
            var readerBarcord = $("#txtBarcode").val();
            if (pass == true) {
                if (readerBarcord == "") {
                    alert("读者证条码号不能为空。");
                    return;
                }
            }

            //读者类型
            var readerType = $('#selReaderType option:checked').val();
            if (pass == true) {
                if (readerType == "") {
                    alert("您尚未选择读者类别。");
                    return;
                }

                if (readerType.indexOf("临时读者") != -1) {
                    alert("审核通过时，需为读者选择正式的读者类型。");
                    return;
                }
            }
            var nIndex = readerType.indexOf("}");
            if (nIndex != -1) {
                readerType = readerType.substring(nIndex + 1).trim();
            }

            //姓名
            var name = $("#txtName").val();
            if (name == "") {
                alert("姓名不能为空！");
                return;
            }

            //性别
            var gender = $('#selGender option:checked').val();
            if (gender == "") {
                alert("尚未选择性别。");
                return;
            }

            // 单位
            var department = $("#txtDepartment").val();
            if (department == "") {
                alert("单位不能为空。");
                return;
            }

            // 手机号
            var tel = $("#txtTel").val();
            if (tel == "") {
                alert("手机号不能为空。");
                return;
            }

            //显示等待图层
            showMaskLayer();

            var bMergeInfo = true;
            // 调Patron的SetPatron()
            var url = "/api/PatronApi?libId=" + libId
                + "&userName=" + encodeURIComponent(userName)
                + "&action=change" // + encodeURIComponent(action)
                + "&recPath=" + encodeURIComponent(recPath)
                + "&timestamp=" + encodeURIComponent(timestamp)
                + "&weixinId="
                + "&bMergeInfo=" + bMergeInfo;

            sendAjaxRequest(url, "POST",
                function (result) {

                    // 关闭等待层
                    hideMaskLayer();

                    if (result.errorCode == -1) {
                        alert(result.errorInfo);
                        return;
                    }

                    $("#_recPath").text(result.recPath);
                    $("#_timestamp").text(result.timestamp);

                    alert("提交成功");
                    $("#btnPass").attr("disabled", true);
                    $("#btnReject").attr("disabled", true);

                    var returnUrl = "/Patron/PatronList"; 
                    gotoUrl(returnUrl);

                },
                function (xhq, textStatus, errorThrown) {
                    // 关闭等待层
                    //layer.close(index);
                    hideMaskLayer();

                    alert(errorThrown);
                },
                {
                    barcode: readerBarcord,
                    readerType: readerType,
                    name: name,
                    gender: gender,
                    department: department,
                    tel: tel,
                    reason: reason,
                    state:state
                }
            );
        }


    </script>
}
<span id="_userName" style="display:none">@ViewBag.userName</span>
<span id="_recPath" style="display:none">@ViewBag.recPath</span>
<span id="_timestamp" style="display:none">@ViewBag.timestamp</span>
@if (String.IsNullOrEmpty(ViewBag.Error) == false)
{
    <div class="mui-content-padded">
        <span class="errorinfo">
            @Html.Raw(ViewBag.Error)
        </span>
    </div>
}
else
{
    if (ViewBag.RedirectInfo != null && ViewBag.RedirectInfo != "")
    {
        @Html.Raw(ViewBag.RedirectInfo);
    }
    else
    {

<div class="mui-input-group">

    <div class="mui-input-row ">
        <label id="lblName" style="color:#cccccc">证条码号</label>
        <input id='txtBarcode' type="text" class="mui-input mui-input-clear" placeholder="请输入 证条码号" value="">  
    </div>

    <div class="mui-input-row selArrowRightContainer">
        <label id="lblType" style="color:#cccccc">读者类别</label>
        @Html.Raw(ViewBag.readerTypeHtml)
    </div>


    <div class="mui-input-row ">
        <label id="lblName" style="color:#cccccc">姓名</label>
        <input id='txtName' type="text" class="mui-input mui-input-clear" value="@Model.name">
    </div>

    <div class="mui-input-row selArrowRightContainer">
        <label id="lblGender" style="color:#cccccc">性别</label>
        <select id="selGender" name="selGender" class='selArrowRight'>
            <option value=''>请选择</option>"
            <option value="男" @ViewBag.manSel>男</option>
            <option value="女" @ViewBag.womanSel>女</option>
        </select>
    </div>

    <div class="mui-input-row ">
        <label id="lblDepartment" style="color:#cccccc">单位</label>
        <input id='txtDepartment' type="text" class="mui-input mui-input-clear" value="@Model.department">
    </div>

    <div class="mui-input-row ">
        <label id="lblTel" style="color:#cccccc">手机号</label>
        <input id='txtTel' type="text" class="mui-input mui-input-clear" value="@Model.tel">
    </div>

    <div class="mui-input-row ">
        <label id="lblReason" style="color:#cccccc">不通过原因</label>
        <input id='txtReason' type="text" class="mui-input mui-input-clear" >
    </div>

</div>
        <div class="mui-content-padded">
            <table style="width:100%">
                <tr>
                    <td>
                        <button id='btnPass' class="mui-btn mui-btn-block mui-btn-default" onclick="save('y')">通过</button>
                    </td>
                    <td width="10px">&nbsp;</td>
                    <td>
                        <button id='btnReject' class="mui-btn mui-btn-block mui-btn-default" onclick="save('n')">不通过</button>
                    </td>
                </tr>
            </table>

        </div>
    }
}

